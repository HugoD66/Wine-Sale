<footer>
    <div class="footer-responsive">
        <a href="#returnTop">
            <img src="{{ asset('picture/icones/arrow.png') }}" alt="" class="img-arrow">
        </a>
        <h6>Win'Export</h6>
        {% if app.user %}
            {% if 'ROLE_ADMIN' in app.user.roles %}
                <a href="{{ path('app_admin_cant_commande') }}">
                    <img src="{{ asset('picture/icones/panier.png') }}" alt="" class="img-panier">
                </a>

            {% elseif 'ROLE_USER' in app.user.roles %}
                <a href="{{ path('app_panier', {'id': app.user.id}) }}">
                    <img src="{{ asset('picture/icones/panier.png') }}" alt="" class="img-panier">
                </a>
            {% endif %}
        {% else %}
        <a href="{{ path('app_non_connect') }}">
            <img src="{{ asset('picture/icones/panier.png') }}" alt="" class="img-panier">
        </a>
        {% endif %}
    </div>
</footer>
<script>
    $(window).scroll(function() {
        var articleOffset = $("article").offset().top;
        var windowHeight = $(window).height();
        var scrollTop = $(window).scrollTop() + windowHeight - articleOffset;
        if(scrollTop > 0) {
            $("footer").css("display", "block");
        } else {
            $("footer").css("display", "none");
        }
    });
</script>